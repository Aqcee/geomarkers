<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapma"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="30 метров"
            android:textAlignment="center"
            android:textColor="@color/background_opacity50"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/addMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_circle"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:onClick="sendCoordinates"
                        android:text="гдея"
                        app:srcCompat="@drawable/logo_minus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/markerSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_circle"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/markerSettings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:onClick="markerSettings"
                        android:text="окей короч"
                        app:srcCompat="@drawable/logo_add" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_circle"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:onClick="sendCoordinates"
                        android:text="гдея"
                        app:srcCompat="@drawable/logo_location" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/markerSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_circle"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logo_succes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:onClick="markerSettings"
                        android:text="окей короч"
                        app:srcCompat="@drawable/logo_success" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/layout_toolbar"
        android:id="@+id/custom_toolbar" />

</RelativeLayout>